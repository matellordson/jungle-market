{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "app/connect-wallet/page.tsx.g"
  ],
  "exclude": ["node_modules"],
  "baseUrl": ".",
  "paths": {
    // This maps any import starting with "@/..." to the root of your project
    "@/*": ["./*"]
  }
}
